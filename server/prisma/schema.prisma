generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pfp {
  id        String   @id @default(uuid())
  studentId String   @unique
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student   Student  @relation(fields: [studentId], references: [id])

  @@index([studentId], map: "pfp_studentId_index")
}

model Student {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(STUDENT)
  clgId     String   @unique
  idCard    String   @unique
  pfp       Pfp?
  score     Score[]

  @@index([clgId], map: "student_clgId_index")
  @@index([email], map: "email_index")
}

model Score {
  id                 String   @id @default(uuid())
  studentId          String?
  totalScore         Int
  attendanceScore    Int
  participationScore Int
  assignmentScore    Int
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  domain             Domain
  student            Student? @relation(fields: [studentId], references: [id])
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(ADMIN)
  empId     String   @unique @default(cuid())

  @@index([empId], map: "admin_empId_index")
  @@index([email], map: "admin_email_index")
}

model employee_updates {
  id       String  @id
  userid   String?
  username String?
  content  String?
  date     String?
}

model MerchPayments {
  id             String   @id @default(uuid())
  orderId        String   @unique
  name           String
  email          String
  upiId          String
  phone          String
  confirmationSS String
  amount         Float
  status         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([upiId], name: "merch_payments_upiId_index")
  @@index([phone], name: "merch_payments_phone_index")
  @@index([orderId], name: "merch_payments_orderId_index")
  @@index([confirmationSS], name: "merch_payments_confirmationSS_index")
}

enum Role {
  STUDENT
  ADMIN
}

enum Domain {
  CLOUD
  DSA
  AIML
  WEB
  ANDROID
  BLOCKCHAIN
  IOT
  CYBERSECURITY
  DEVOPS
}
